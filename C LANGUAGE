#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
#include<string.h>
#include<ctype.h>


char operators[4]={'+','-','*','='};

char *keywords[8]={"int","float","char","if","else","while","for","return"};

int main(){
    int i;

FILE*fp=fopen("example.txt","r");
if(fp==NULL){
    printf("Error opening file.\n");
    return 1;
}
printf("phase 1 of compilation has started from this moment");
char word[50];
while(fscanf(fp,"%s",word)!=EOF){
int iskeyword=0;
for(i=0;i<8;i++){
        if(strcmp(word,keywords[i])==0){
    iskeyword=1;
    break;
        }
}
if(iskeyword){
    printf("keywords= %s\n",word);
}
int isoperator;
for(i=0;i<4;i++){
    if(word[0]==operators[i]){
        printf("operator = %s\n",word);
    break;
    }
}
if(!iskeyword&&!isoperator){
    if(isalpha(word[0])||word[0]=='_'){
        printf("identifier = %s\n",word);

    }
}
}
fclose(fp);
return 0;

}


